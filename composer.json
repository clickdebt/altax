{
  "name": "kohkimakimoto/altax",
  "description": "Altax is a deployment tool for PHP",
  "keywords": ["deploy", "deployment", "ssh", "altax"],
  "homepage": "https://github.com/kohkimakimoto/altax",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Kohki Makimoto",
      "email": "kohki.makimoto@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "symfony/process": ">=2.5.0",
    "symfony/console": ">=2.5.0",
    "symfony/filesystem": ">=2.5.0",
    "symfony/yaml": ">=2.5.0",
    "symfony/finder": ">=2.5.0",
    "illuminate/container": "4.*",
    "illuminate/support": "4.*",
    "illuminate/config": "4.*",
    "illuminate/events": "4.*",
    "phpseclib/phpseclib": "0.3.*@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "mockery/mockery": "~0.9",
    "fabpot/php-cs-fixer": "@stable",
    "satooshi/php-coveralls": "dev-master"
  },
  "scripts": {
    "post-install-cmd": [
      "Altax\\ComposerScript\\ScriptHandler::removeAutoloadFiles"
    ],
    "post-update-cmd": [
      "Altax\\ComposerScript\\ScriptHandler::removeAutoloadFiles"
    ]
  },
  "autoload": {
    "files": [
        "src/Altax/Foundation/functions.php"
    ],
    "psr-0": { "Altax\\": "src/"}
  },
  "extra": {
      "branch-alias": {
          "dev-master": "4.x-dev"
      }
  },
  "bin": ["bin/altax"]
}
